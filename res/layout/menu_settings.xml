<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.t3hh4xx0r.haxlauncher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/system_settings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/system_text" />

    <HorizontalScrollView
        android:id="@+id/system_toggles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <LinearLayout
            android:id="@+id/holder"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        	<com.t3hh4xx0r.haxlauncher.menu.SettingsToggleView
	            android:id="@+id/wifi"
	            app:title_text="WiFi"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content">
	        </com.t3hh4xx0r.haxlauncher.menu.SettingsToggleView>
	        
        	<com.t3hh4xx0r.haxlauncher.menu.SettingsToggleView
	            android:id="@+id/sound"
	            app:title_text="Sound"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content">
	        </com.t3hh4xx0r.haxlauncher.menu.SettingsToggleView>        	
        
        	<com.t3hh4xx0r.haxlauncher.menu.SettingsToggleView
	            android:id="@+id/rotation"
	            app:title_text="Rotation"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content">
	        </com.t3hh4xx0r.haxlauncher.menu.SettingsToggleView>
	        
        	<com.t3hh4xx0r.haxlauncher.menu.SettingsToggleView
	            android:id="@+id/airplane"
	            app:title_text="Airplane"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content">
	        </com.t3hh4xx0r.haxlauncher.menu.SettingsToggleView>        		
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/launcher_settings"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/launcher_text" />

    <LinearLayout
        android:id="@+id/launcher_toggles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >
                
    </LinearLayout>

</LinearLayout>